
extends layout
block content
   h1= title
   if (responseMessage)
      div(class="error")= responseMessage
   p Class list for #{username}:
   form(method="post",
     action="/addItem"
     class="form")
     
     input(type="text",
         id="name",
         name="name",
         placeholder="name",
         class="control row1" required)

     input(type="text",
         id="quantity",
         name="quantity",
         placeholder="quatity",
         class="control row2" required)

     input(type="date",
         id="date",
         name="date",
         placeholder="date",
         class="control row2")
     button(class="control row3") Update
     button(class="control row3") Add

   table(class="table")
      tr
         th name
         th Quantity
         th Date
      each item in items
         tr
            td= item.name
            td= item.quantity
            td= item.date
            
   
