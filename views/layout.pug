doctype
html
    head
        title=title
        link(rel="stylesheet", href="/bootstrap/css/bootstrap.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.1/css/all.css", integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf", crossorigin="anonymous")

        script(src="https://code.jquery.com/jquery-latest.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            a(class="navbar-brand" href="/") Newer Egg
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(href="/" class="nav-link") Home
                li(class="nav-item")
                    a(href="/about" class="nav-link") About
                li(class="nav-item")
                    a(href="/items" class="nav-link") Items
                if (username != undefined)
                    li(class="nav-item")
                        div(class="dropdown")
                            button(class="btn btn-secondary dropdown-toggle btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                img(class="icon" src="/images/user_icon.png", alt="")
                            div(class="dropdown-menu" aria-labelledby="dropdownMenuButton")
                                if (username === "admin")
                                    a(href="/admin" class="dropdown-item") Admin
                                else
                                    p(class="dropdown-item")= username 
                                a(href="/signout" class="dropdown-item") Sign out
                if (username === undefined)
                    li(class="nav-item")
                        a(href="/login" class="nav-link login") Login
                    li(class="nav-item")
                        a(href="/register" class="nav-link register") Register
                li(class="nav-item")
                    a(href="#" class="nav-link")
                        div(class="cart")
                            i.fas.fa-shopping-cart

        block content

