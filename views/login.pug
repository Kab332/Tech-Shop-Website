extends layout
block content
   h1= title

   div(class='errorMessage')= errorMessage

   form#login.needs-validation(method='post', action='/processLogin', novalidate='')
    .col-md-4.offset-md-4
      .box
        .loginBox
          .form-group
            label(for='uName') LOGO
            input#userName.form-control(type='userName', name='username', placeholder='Username', required='')
            if (loginError)
              .invalid-feedback
              | Incorrect User Name and/or Password
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter your user name.
          .form-group
            input#passWord.form-control(type='password', name='password', placeholder='Password', autocomplete='new-password', required='')
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter your password.
          button.btn.btn-primary(type='submit') Submit
          hr
          .form-group
            h7
              | Dont have an account? 
              a(href='/register') Sign up

            
              script(src="js/login.js")
