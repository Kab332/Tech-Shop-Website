extends layout
block content
  div(class="container-fluid")
    h1= title

    div(class='errorMessage')= errorMessage

        
    .signup
      form#signUpForm.needs-validation(method='POST', action='/processRegistration', novalidate='')
        .form-row
          .form-group.col-md-6
            label(for='inputEmail') Email
            input#inputEmail.form-control(type='email', name="email", placeholder='Email' required='')
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter an email address.
          .form-group.col-md-6
            label(for='inputUserName') User Name
            input#inputUserName.form-control(type='text', name='username', placeholder='User Name', required='')
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter a username.
          .form-group.col-md-6
            label(for='inputPassword4') Password
            input#inputPassword.form-control(type='password', name='pwd', placeholder='Password', autocomplete='new-password', required='')
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter a password.
        .form-group
          label(for='inputAddress') Address
          input#inputAddress.form-control(type='text', name="address", placeholder='1234 Main St' required)
          .valid-feedback
            | Looks good!
          .invalid-feedback
            | Please add an address.
        .form-row
          .form-group.col-md-4
            label(for='inputCountry') Country
            input#inputCountry.form-control(type='text', name="country" required)
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter the city.
          // make render list based on the Country selected
          .form-group.col-md-3
            label(for='inputState') State
            input#inputState.form-control(type='text', name="state" required)
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter the city.
          .form-group.col-md-3
            label(for='inputCity') City
            input#inputCity.form-control(type='text', name="city" required)
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please enter the city.
          .form-group.col-md-2
            label(for='inputZip') Zip
            input#inputZip.form-control(type='text', name="zip" required)
        .form-group
          .form-check
            input#gridCheck.form-check-input(type='checkbox' required)
            label.form-check-label(for='gridCheck')
              | Agree to terms and services
            .valid-feedback
              | Looks good!
            .invalid-feedback
              | Please click the terms abd services box.
        .form-row
          .form-group.col-md-4
            a(href='/login') Already have an acount?
        button.btn.btn-primary(type='submit') Sign Up

        
        script(src="js/signup.js")
