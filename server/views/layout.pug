doctype
html
    head
        title=title
        link(rel="stylesheet", href="/bootstrap/css/bootstrap.css")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="css/style.css")

        script(src="https://code.jquery.com/jquery-latest.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    body
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            a(class="navbar-brand" href="/") Newer Egg
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(href="/" class="nav-link") Home
                li(class="nav-item")
                    a(href="/about" class="nav-link") About
                li(class="nav-item")
                    a(href="/items" class="nav-link") Items
                if (username != undefined)
                    li(class="nav-item")
                        div(class="dropdown")
                            button(class="btn btn-secondary dropdown-toggle btn-light" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                img(class="icon" src="images/user_icon.png", alt="")
                            div(class="dropdown-menu" aria-labelledby="dropdownMenuButton")
                                p(class="dropdown-item")= username 
                                a(href="/signout" class="dropdown-item") Sign out
                if (username === undefined)
                    li(class="nav-item")
                        a(href="/login" class="nav-link") Login
                    li(class="nav-item")
                        a(href="/register" class="nav-link") Register
        block content

